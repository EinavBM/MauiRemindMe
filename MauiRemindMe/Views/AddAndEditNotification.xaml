<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
            xmlns:vm="clr-namespace:MauiRemindMe.ViewsModels"
             x:Class="MauiRemindMe.Views.AddAndEditNotification"
             x:DataType="vm:AddAndEditNotificationVM"
             Title="AddAndEditNotification">
    <VerticalStackLayout Padding="10" Margin="20,20,20,0">

        <Label  Text="{Binding FailError}"  />
        <Border Padding="10,2,10,2" >
            <Entry Placeholder="Status" VerticalOptions="Center" Text="{Binding Notification.Status}"/>
        </Border>
        <Border Padding="10,2,10,2" >
            <Entry Placeholder="Info" VerticalOptions="Center" Text="{Binding Notification.Info}"/>
        </Border>
        <Border Padding="10,2,10,2" >
            <Entry Placeholder="DateN" VerticalOptions="Center" Text="{Binding Notification.DateN}"/>
        </Border>
        <Button Text="Save" Command="{Binding SaveAndUpdateCommand} "/>
        <!--<Button Text="Cancle" Command="{Binding SaveAndUpdateCommand}"/>-->
    </VerticalStackLayout>
</ContentPage>